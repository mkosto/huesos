<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title><%%= h(@meta[:title] || "#{controller.controller_name.humanize}: #{controller.action_name} â€“ <%= project_name %>") %></title>
	<meta name="description" content="<%%= @meta[:description] || APP_CONFIG[:meta]["description"] %>" />
	<meta name="keywords" content="<%%= @meta[:keywords] || APP_CONFIG[:meta]["keywords"] %>" />
  
	<meta name="alexaVerifyID" content="" />
	<meta name="csrf-token" content="<%%= form_authenticity_token %>" />
	<meta name="csrf-param" content="authenticity_token" />

  <%%= stylesheet_link_tag "application", controller.controller_name.downcase, :cache => true %>
  <%%= stylesheet_link_tag "/fonts/junction-regular/junction.css" %>
	
	<%%= javascript_tag %{var RAILS_ENV = "#{RAILS_ENV}"; } %>
	<%%= javascript_include_tag "jquery", "cufon-yui", "jquery.uniform", "application", :cache => true %>
	<%%= javascript_include_tag Dir.glob('public/fonts/**/*.font.js').map{|f| f.gsub('public','')} %>

	<link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />

	<script type="text/javascript" charset="utf-8">
		Cufon.replace("#main_nav a, h1:not(.regular), h2:not(.regular), h3:not(.regular), h4:not(.regular), h5:not(.regular), h6:not(.regular), dt:not(.regular)", {hover: true});
		Cufon.replace("#content_header h1", {textShadow: '2px 1px rgba(0,0,0,0.20)', color: '-linear-gradient(0.5=white, #888)'});
		Cufon.replace("#content_header h2", {textShadow: '2px 1px rgba(0,0,0,0.15)', color: '-linear-gradient(#fff9b7, #d9d49c)'});
	</script>

	<%%= yield(:head) %>
</head>
<body>

	<!-- div#(canvas_)wrapper: no tiene width, imagen adicional de fondo -->
	<div id="wrapper">

		<%%= render :partial => 'layouts/top_bar' %>

		<!-- div#canvas: width: 960px, puede tener un margin-top -->
			<div id="canvas">

				<div id="header" class="row">
					<div id="logo" class="column grid_4">
						<a href="<%%= root_path %>"><%= project_name %></a>
					</div>

					<div id="header_info"></div>

					<%%= render :partial => 'layouts/main_nav' %>

				</div> <!-- /#header -->
				
				<%%= render :partial => 'layouts/menu' %>

				<div id="content_wrapper" class="row">
					<div id="content_header" class="column grid_12">
						<%%= yield :content_header %>
					</div>

					<div id="content">
						<%%= yield %>
					</div>

					<div id="content_footer">
						<%%= yield :content_footer %>
					</div>
				</div> <!-- /#content_wrapper -->

			</div> <!-- /#canvas -->

		<%%= render :partial => "layouts/footer" %>

	</div> <!-- /#wrapper -->


<%% if APP_CONFIG[RAILS_ENV.to_sym]["google_analytics_account_id"].present? %>
	<script type="text/javascript" charset="utf-8">
	 var _gaq = [['_setAccount', '<%%= APP_CONFIG[RAILS_ENV.to_sym]["google_analytics_account_id"] %>'], ['_trackPageview']];
	 (function(d, t) {
	  var g = d.createElement(t), s = d.getElementsByTagName(t)[0];
	  g.async = true;
	  g.src = '//www.google-analytics.com/ga.js';
	  s.parentNode.insertBefore(g, s);
	 }(document, 'script'));
	</script>
<%% end %>

</body>
</html>
